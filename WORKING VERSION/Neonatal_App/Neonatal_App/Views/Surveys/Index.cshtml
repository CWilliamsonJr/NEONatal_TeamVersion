@model IEnumerable<Neonatal_App.Models.Survey>

@{
    ViewBag.Title = "Index";
}

<html>
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Information</title>
    <link rel="stylesheet" href="css/normalize.css">
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/main.css">
    </head>

    <body>
        <!--begin table-->
        <table>
        <caption>Survey List</caption>
            <thead>
                <tr>
                <th scope="col">Name</th>
                <th scope="col">Details</th>
                <th scope="col">Generate Risk Score</th>
                <th scope="col">Make Changes</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
            <tbody>
                <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Client.first_name)
                    @Html.DisplayFor(modelItem => item.Client.last_name)
                </th>
                <td>
                    @Html.ActionLink("Click Here", "Details", new { id = item.id })
                </td>
                <td>
                    @Html.ActionLink("Generate Risk Score", "RiskScore", new { id = item.id })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) 
                    |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
                </tr>
            </tbody>
            }
        </table>
        <!--end table-->

        <div class="container">
            @using (Html.BeginForm("Index", "Surveys", FormMethod.Get))
            {
                <p>
                    Name: @Html.TextBox("SearchString") <br />
                    <br />
                    <input type="submit" value="Filter" />
                </p>
            } 
        </div>
        <br />
        <div class="navigate">
            @Html.ActionLink("Create New", "Create") |
            @Html.ActionLink("Go Back", "Index", "Surveys") |
            @Html.ActionLink("Clients", "Index", "Clients") |
        </div>
    </body>
</html>